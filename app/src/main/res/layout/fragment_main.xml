<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="49dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mailAddress"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:hint="メールアドレス"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890.@"
                android:inputType="textEmailAddress"
                android:maxLength="24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button"
                android:layout_width="164dp"
                android:layout_height="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:bootstrapBrand="success"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true"
                app:bootstrapText="認証コードを取得" />

        </LinearLayout>


        <EditText
            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="パスワード"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:inputType="textPassword"
            android:maxLength="8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mailAddress" />

        <EditText
            android:id="@+id/passWord2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="パスワード確認"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:inputType="textPassword"
            android:maxLength="8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mailAddress" />


        <EditText
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="認証コード"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mailAddress" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/makeAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            app:bootstrapText="アカウント作成 {fa_check}"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="アカウントをお持ちですか?"
        app:layout_constraintBottom_toTopOf="@id/loginButton"/>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapText="ログイン {fa_amazon} {fa_instagram} {fa_bitcoin} {fa_youtube_play} {fa_github_square} {fa_facebook-official}"/>

</androidx.constraintlayout.widget.ConstraintLayout>

